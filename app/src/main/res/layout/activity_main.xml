<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/button_addclass"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/white"
            android:fontFamily="sans-serif-medium"
            android:src="@drawable/ic_baseline_add_24"
            android:textColor="@android:color/holo_red_dark"
            android:textColorHighlight="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/button_scedule"
            app:layout_constraintEnd_toStartOf="@+id/button_scedule"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:adjustViewBounds="true"
            android:padding="20dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/button_scedule"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_calendar_today_24"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="@+id/button_shared"
            app:layout_constraintEnd_toStartOf="@+id/button_shared"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_addclass"
            android:adjustViewBounds="true"
            android:padding="20dp"
            android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/button_shared"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_person_add_24"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_scedule" />
    </LinearLayout>
